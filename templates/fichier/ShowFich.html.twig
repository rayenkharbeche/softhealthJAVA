{% extends 'base.html.twig' %}
{% block title %} {% endblock  %}

{% block body %}
    <div class="m-4">
        <h2 style="color: #22aab1;">Liste des fichiers</h2>
    </div>
    <table class="table table-striped table-hover">
        <thead style="backgournd: #efefef;">
        <tr>
            <th>id</th>
            <th>description</th>
            <th>image</th>
            <th>dossier</th>
            <th>update</th>
            <th>remove</th>
        </tr>
        </thead>
        <tbody> <!-- table body -->
        {% for c in fichiers %}
            <tr>
                <td> {{ c.id}}</td>
                <td> {{ c.description}}</td>
                <td> {{ c.image}}</td>
                <td> {{ c.dossier.id}}</td>

                <td><a href="{{ path('edit_fichier',{'id':c.id}) }}">update</a></td>
                <td><a href="{{ path('remove_fichier',{'id':c.id}) }}">Remove</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock  %}
